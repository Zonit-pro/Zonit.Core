@using Microsoft.AspNetCore.Components.Authorization
@using Zonit.Extensions

<Router AppAssembly="@typeof(App).Assembly" AdditionalAssemblies="@Types()">
    <Found Context="routeData">
        <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(Layouts.MainLayout)" >
            <NotAuthorized>
                
                <MudContainer>
                    <MudCard>
                        <MudCardHeader><MudText Typo="Typo.h6">Not authorized</MudText></MudCardHeader>
                        <MudCardContent>
                            <p>You are not authorized to access this resource.</p>
                        </MudCardContent>
                    </MudCard>
                </MudContainer>

            </NotAuthorized>
        </AuthorizeRouteView>
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <PageTitle>Not found</PageTitle>
        <LayoutView Layout="@typeof(Layouts.MainLayout)">
            <p role="alert">Sorry, there's nothing at this address.</p>
        </LayoutView>
    </NotFound>
</Router>

<ZonitCookiesExtension />
<ZonitIdentityExtension />
<ZonitCultureExtension />