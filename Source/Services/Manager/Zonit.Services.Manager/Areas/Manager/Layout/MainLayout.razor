    protected override void OnInitialized()
    {
        if (Authenticated.User is null)
            NavigationManager.NavigateTo("/Identity/Auth");

        Culture.OnChange += () =>
        {
            if (Culture.GetCulture == "ar-sa")
                RightToLeft = true;
            else
                RightToLeft = false;

            StateHasChanged();
        };
    }

    public void Dispose()
        => Culture.OnChange -= StateHasChanged;

